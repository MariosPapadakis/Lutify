{
  "expo": {
    "name": "LUTify",
    "slug": "lutify",
    "owner": "YOUR_EXPO_USERNAME",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "lutify",
    "packagerOpts": {
      "hostType": "lan"
    },
    "splash": {
      "image": "./assets/icon-1760998085081.png",
      "resizeMode": "contain",
      "backgroundColor": "#25292e"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.lutify.app",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "LUTify needs access to your photo library to let you select photos for editing and to load images when applying color grading filters. For example, you can choose a photo from your library, apply a cinematic LUT filter, and see the results in real-time.",
        "NSPhotoLibraryAddUsageDescription": "LUTify needs permission to save your edited photos to your photo library. For example, when you apply a LUT filter and tap 'Save', the app will save the color-graded photo to your Photos app.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "appleTeamId": "YOUR_APPLE_TEAM_ID",
      "icon": "./assets/lutify.icon"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#25292e"
      },
      "package": "com.lutify.app",
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.ACCESS_MEDIA_LOCATION",
        "android.permission.READ_MEDIA_VISUAL_USER_SELECTED",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_MEDIA_AUDIO",
        "android.permission.RECORD_AUDIO"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#25292e",
          "image": "./assets/icon-1760998085081.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "dark": {
            "image": "./assets/icon-1760998085081.png",
            "backgroundColor": "#25292e"
          }
        }
      ],
      [
        "expo-dev-client",
        {
          "launchMode": "most-recent"
        }
      ],
      "expo-sqlite",
      [
        "expo-media-library",
        {
          "photosPermission": "LUTify needs access to your photo library to let you select photos for editing and to load images when applying color grading filters. For example, you can choose a photo from your library, apply a cinematic LUT filter, and see the results in real-time.",
          "savePhotosPermission": "LUTify needs permission to save your edited photos to your photo library. For example, when you apply a LUT filter and tap 'Save', the app will save the color-graded photo to your Photos app.",
          "isAccessMediaLocationEnabled": true
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "LUTify needs access to your photo library to let you select photos for editing. For example, you can choose any photo from your library to apply professional color grading using LUT filters."
        }
      ],
      "expo-asset"
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "YOUR_EAS_PROJECT_ID"
      }
    }
  }
}

